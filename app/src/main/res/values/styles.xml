<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<style name="tm_background">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:adjustViewBounds">false</item>
		<item name="android:scaleType">fitXY</item>
	</style>
	<style name="CheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
		<item name="android:button">@drawable/checkbox_drawable</item>
	</style>
	
	<style name="SpinnerItemStyle">
		<item name="android:textSize">20dp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="CustomSpinnerDropdownStyle" parent="Widget.AppCompat.Spinner.DropDown">
		<item name="android:background">@drawable/custom_spinner_dropdown_background</item>
	</style>

</resources>