<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/tmscreen1"
	android:orientation="vertical">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal">
		
		<TextView
			android:id="@+id/SignUpText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="30dp"
			android:layout_marginTop="30dp"
			android:layout_marginRight="40dp"
			android:fontFamily="casual"
			android:text="Sign Up"
			android:textColor="@color/gold"
			android:textSize="25dp"
			android:textStyle="bold" />
		
		<ImageView
			android:id="@+id/imageViewSplash"
			android:layout_width="150dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:layout_marginLeft="100dp"
			android:clickable="false"
			android:rotation="55"
			app:srcCompat="@drawable/mrocket" />
	
	
	</LinearLayout>
	
	<TextView
		android:id="@+id/SignUpUsername"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="40dp"
		android:layout_marginTop="140dp"
		android:layout_marginRight="40dp"
		android:fontFamily="casual"
		android:text="Username"
		android:textColor="@color/gold"
		android:textSize="20dp"
		android:textStyle="bold" />
	
	<EditText
		android:id="@+id/SignUpUsernameText"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:layout_marginBottom="10dp"
		android:background="@drawable/border"
		android:fontFamily="casual"
		android:hint="username"
		android:inputType="text"
		android:padding="10dp"
		android:textColor="@color/white"
		android:textColorHint="@color/white"
		android:textSize="18dp"
		android:textStyle="bold" />
	
	<TextView
		android:id="@+id/SignUpRole"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:fontFamily="casual"
		android:text="Role"
		android:textColor="@color/gold"
		android:textSize="20dp"
		android:textStyle="bold" />
	
	<EditText
		android:id="@+id/SignUpRoleText"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:layout_marginBottom="10dp"
		android:background="@drawable/border"
		android:fontFamily="casual"
		android:hint="Manager or Employee"
		android:inputType="text"
		android:padding="10dp"
		android:textColor="@color/white"
		android:textColorHint="@color/white"
		android:textSize="18dp"
		android:textStyle="bold" />
	
	
	<TextView
		android:id="@+id/SignUpEmail"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:fontFamily="casual"
		android:text="Email"
		android:textColor="@color/gold"
		android:textSize="20dp"
		android:textStyle="bold" />
	
	<EditText
		android:id="@+id/SignUpEmailText"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:layout_marginBottom="10dp"
		android:background="@drawable/border"
		android:fontFamily="casual"
		android:hint="example@email.com"
		android:inputType="text"
		android:padding="10dp"
		android:textColor="@color/white"
		android:textColorHint="@color/white"
		android:textSize="18dp"
		android:textStyle="bold" />
	
	<TextView
		android:id="@+id/SignUpPassword"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:fontFamily="casual"
		android:text="Password"
		android:textColor="@color/gold"
		android:textSize="20dp"
		android:textStyle="bold" />
	
	<EditText
		android:id="@+id/SignUpPasswordText"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:layout_marginBottom="10dp"
		android:background="@drawable/border"
		android:fontFamily="casual"
		android:hint="************"
		android:inputType="textPassword"
		android:padding="10dp"
		android:textColor="@color/white"
		android:textColorHint="@color/white"
		android:textSize="18dp" />
	
	<CheckBox
		android:id="@+id/checkBox"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="40dp"
		android:layout_marginTop="20dp"
		android:layout_marginRight="40dp"
		android:buttonTint="#FFC107"
		android:fontFamily="casual"
		android:text="I agree to the Terms of Services and the Privacy Policy"
		android:textColor="@color/gold"
		android:textStyle="bold"/>
		
	<Button
		android:id="@+id/signupbutton"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="40dp"
		android:layout_marginTop="20dp"
		android:layout_marginRight="40dp"
		android:backgroundTint="@color/light_blue"
		android:fontFamily="casual"
		android:text="Continue"
		android:textSize="18dp"
		android:textStyle="bold" />
	
		
		<TextView
			android:id="@+id/alreadyaccountclick"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="10dp"
			android:fontFamily="casual"
			android:text="Have an Account? Sign In"
			android:textColor="@color/gold"
			android:textStyle="bold" />


</LinearLayout>

